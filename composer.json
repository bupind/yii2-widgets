{
  "name": "webtoolsnz/yii2-widgets",
  "description": "A Yii2 widgets library by Webtools",
  "keywords": ["yii2", "widget", "wysiwyg", "radioButton", "google", "maps", "datepicker", "currency"],
  "type": "yii2-extension",
  "license": "proprietary",
  "homepage": "https://github.com/webtoolsnz/yii2-widgets",
  "authors": [
    {
      "name": "Byron Adams",
      "email": "byron@webtools.co.nz",
      "role": "Developer"
    },
    {
      "name": "Webtools Ltd",
      "email": "support@webtools.co.nz",
      "homepage": "http://www.webtools.co.nz",
      "role": "Developer"
    }
  ],
  "require": {
    "yiisoft/yii2": "^2.0.7",
    "yiisoft/yii2-bootstrap": "*",
    "yiisoft/yii2-jui" : "*",
    "symfony/intl": "^2.7",
    "symfony/yaml": "^2.8",
    "bower-asset/font-awesome": "^4.3",
    "bower-asset/signature_pad": "^1.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.7.7",
    "phpdocumentor/reflection-docblock" : "^2.0"
  },
  "autoload": {
    "psr-4": {
      "webtoolsnz\\widgets\\": "src"
    }
  },
  "extra": {
    "asset-installer-paths": {
      "npm-asset-library": "vendor/npm",
      "bower-asset-library": "vendor/bower"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --coverage-text --coverage-html=build;"
  }
}
